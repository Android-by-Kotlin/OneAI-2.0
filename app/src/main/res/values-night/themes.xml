<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OneAI" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.OneAI.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/brain_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.OneAI</item>
    </style>
</resources>
